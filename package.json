{
  "name": "image-texter",
  "version": "0.1.16",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "build": "npm run clean && webpack -p",
    "clean": "rm -rf dist",
    "deploy": "gh-pages -d dist",
    "bump": "npm version patch",
    "publish": "npm run bump && npm run build && npm run deploy",
    "lint": "standard --fix",
    "cypress": "cypress run --reporter junit --reporter-options \"mochaFile=test/results/cypress-results.xml,toConsole=true\"",
    "cypress:open": "cypress open",
    "cypress:buildserver": "start-server-and-test start http://localhost:8080 cypress",
    "cypress:open:buildserver": "start-server-and-test start http://localhost:8080 cypress:open"
  },
  "dependencies": {
    "dat.gui": "^0.7.3",
    "file-saver": "^2.0.0",
    "p5": "^0.7.2",
    "query-string": "^6.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^8.0.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "^4.6.0",
    "cypress": "^3.1.3",
    "eslint-config-p5js": "^1.0.1",
    "eslint-plugin-cypress": "^2.1.3",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "standard": "^12.0.1",
    "start-server-and-test": "^1.7.11",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "standard": {
    "ignore": [
      "**/dat.gui.js"
    ],
    "extends": [
      "p5js",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    },
    "globals": [
      "VERSION",
      "IMAGES"
    ]
  }
}
